.chat-menu
  .chat-menu__user
    .chat-menu__user-name TEST-user-name
    .chat-menu__user-contents
      .chat-menu__user-contents-new-group
        = link_to root_path do
          = fa_icon 'pencil-square-o', class: 'chat-menu__user-icon'
      .chat-menu__user-contents-edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  =render :partial => "chat-menu__group"
  =render :partial => "chat-menu__group"
  =render :partial => "chat-menu__group"

.chat-main
  .chat-main__header
    .chat-main__header--group
      .chat-main__header--group-name TEST-group
      .chat-main__header--group-edit-botton Edit
      .chat-main__header--group-members MEMBER: tset-user-name

  =render :partial => "chat-main__message"
  =render :partial => "chat-main__message"
  =render :partial => "chat-main__message"

  .chat-main__footer
    %form.chat-main__footer-form
      %input.description{:placeholder => "type a message", :type => "text"}
      %label.chat-imgfile
        %input.image{:type => "file"}
        %i.fa.fa-picture-o
      %input.submit{:type => "submit", :value => "Send"}
